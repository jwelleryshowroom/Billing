rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /logos/{businessId}/{allPaths=**} {
      // Allow read for everyone
      allow read: if true;
      // Allow write if authenticated and is part of the business (handled by app logic mostly, but rules should be safe)
      // For now, allowing authenticated writes as a baseline
      allow write: if request.auth != null;
    }
  }
}
